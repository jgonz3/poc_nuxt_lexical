{
  "name": "poc-nuxt-lexical",
  "private": true,
  "workspaces": [
    "application",
    "lexical-vue",
    "lexical-vue-editor"
  ],
  "scripts": {
    "app:dev": "lerna run dev --scope=application",
    "app:build": "lerna run build --scope=application",
    "app:generate": "lerna run generate --scope=application",
    "app:preview": "lerna run preview --scope=application",
    "editor:dev": "lerna run dev --scope=lexical-vue-editor",
    "editor:build": "lerna run build --scope=lexical-vue-editor",
    "editor:preview": "lerna run preview --scope=lexical-vue-editor",
    "format": "prettier --write \"**/*.{js,ts,cjs,vue,json,md,css,scss}\" --log-level silent",
    "lint": "eslint --ext .js,.ts,.vue application lexical-vue-editor --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.20.1",
    "lerna": "^8.1.2",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11"
  }
}
